            </div>
            <ul>
                <li><a href="/login">Login</a></li>
                <li><a href="/admin">Admin</a></li>
            </ul>           
        </nav>
        <div class="blogs content">
            <h2>Now Showing</h2>
            <% if(movies.length>0) { %>
            <% movies.forEach(movies => { %>
                <a class="single" href="/login">
                <h2><%= movies.title %></h2>
                </a>
            <% }) %>
            <% } else { %>
            <p> Wait for the screens to Open. Stay SAFE! </p> 
            <% } %>
        </div>
    </body>
</html>